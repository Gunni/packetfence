#!/bin/bash

function check_code() {
  if [ $1 -ne 0 ];then
    if ! [ -z "$2" ]; then
        echo $2
    fi

    echo "Failed command. Exiting immediately"
    exit 1
  fi
}

function prompt() {
  msg="$1"
  answer=""
  while [ "$answer" != "y" ] && [ "$answer" != "n" ]; do
    echo -n "$msg (y/n): "
    read answer
  done
  
  if [ "$answer" == "y" ]; then
    return 0
  else
    return 1
  fi
}
